@model DMS_Demo.Models.Product

@{
    ViewData["Title"] = "Edit";

    SelectList category = new SelectList(ViewBag.categ, "Id", "Name");
    SelectList colors = new SelectList(Enum.GetValues(typeof(Color)));
    SelectList size = new SelectList(Enum.GetValues(typeof(Size)));
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product_ID" />
            <div class="form-group">
                <label asp-for="Product_Name" class="control-label"></label>
                <input asp-for="Product_Name" class="form-control" />
                <span asp-validation-for="Product_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Uom_Id" class="control-label"></label>
                <select asp-for="Uom_Id" class="form-control" asp-items="category"></select>
                <span asp-validation-for="Uom_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product_Price" class="control-label"></label>
                <input asp-for="Product_Price" class="form-control" />
                <span asp-validation-for="Product_Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Images" class="control-label"></label>
                <input type="file" asp-for="@Model.Images" name="image" class="form-control" />
                <span asp-validation-for="@Model.Images" class="text-danger"></span>
            </div>

           
            <div class="form-group">
                <label asp-for="Product_Size" class="control-label"></label>
                <select asp-for="Product_Size" class="form-control" asp-items="size" ></select>
                <span asp-validation-for="Product_Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product_Color" class="control-label"></label>
                <select asp-for="Product_Color" class="form-control" asp-items="colors"></select>
                <span asp-validation-for="Product_Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Adding_Date" class="control-label"></label>
                <input asp-for="Adding_Date" class="form-control" />
                <span asp-validation-for="Adding_Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Discount" class="control-label"></label>
                <input asp-for="Discount" class="form-control" />
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stored_Quantity" class="control-label"></label>
                <input asp-for="Stored_Quantity" class="form-control" />
                <span asp-validation-for="Stored_Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-warning" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
